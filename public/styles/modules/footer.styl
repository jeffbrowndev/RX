@import 'variables'
@import 'mixins'

// Footer rules
footer
  z-index -1
  width 100%
  background $grey
  padding $sectionPadding
  button
    min-width 125px
  .container
    display flex
    max-width 960px
    margin auto
    justify-content space-between
    .button-row
      padding-top 7px
    .newsletter, .social-media
      color $white
      display flex
      p
        font-family $ralewayLight
        padding $smallPadding 0
    .newsletter
      .line
        lineVert(96px)
    .social-media
      .line
        lineVert(46px)
    input
      width 100%
      padding $smallPadding 0 $smallPadding 10px
      font-size 18px
      margin-bottom $smallPadding

// Media queries
footer
  +mQ(800px)
    padding $sectionPaddingMobile
    .container
      display block
      .newsletter, .social-media
        padding 0
        width 100%
        justify-content center
        text-align center
        .line
          display none
      .newsletter
        margin-bottom $largePadding
      .social-media
        .content
          .button-row
            a
              margin $smallPadding 7.5px
