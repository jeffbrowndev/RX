@import 'variables'
@import 'mixins'

nav
  width: 100%
  height: 75px
  background: $grey
  position: relative
  display: flex
  align-items: center
  justify-content: center

  img
    width: 70px
    margin-right: $smallPadding

  #menu
    display: none
    position: absolute
    top: $smallPadding
    right: $smallPadding
    z-index: 9999

  #hamburger
    position: absolute
    top: calc(50% - 13px)
    right: 20px
    z-index: 9999
    color: $white
    display: none
    transition: $slow

    .patty
      width: 5px
      height: 5px
      background: $white
      margin: 0px 2px
      border-radius: 1px

  ul
    z-index: 9999
    display: flex
    height: 100%
    font-family: $ralewayBold
    letter-spacing: 3px
    font-size: 14px
    justify-content: center
    align-items: center

    li
      margin: 0 $smallPadding

  .line
    lineHorz()

// Media Queries
nav
  +mQ($tablet)
    display: block
    height: 60px

    img
      margin: $smallPadding 0 0 $smallPadding
      width: 45px

    #hamburger
      display: flex
      padding: 10px 0

    #menu:checked ~ ul
      transform: translateX(0)

    #menu:checked ~ #hamburger
      transform: rotate(270deg)

    ul
      position: absolute
      top: 0
      padding-top: calc(50vh - 161px)
      width: 100%
      background: $grey
      z-index: 10
      height: 100vh
      display: block
      transform: translateX(-100%)
      transition: $slow

      li
        text-align: center
        margin: 0
        padding: $smallPadding
