@import 'mixins'
@import 'variables'

.home-container
  nav
    display none
  .home
    position relative
    width 100%
    height 100vh
    background url('/images/home_header.jpg') no-repeat
    background-size cover
    background-position center top
    padding-top $smallPadding
    .home-header-mobile
      width 100%
      display none
    .button-row
      position absolute
      top $smallPadding
      right 10px
    .home-navigation
      .line
        lineVert((373px / 2))

        position absolute
        top $smallPadding
        left 0
        margin-left $smallPadding
      ul
        z-index 9999
        font-family $ralewayBold
        letter-spacing 3px
        font-size 14px
      li
        padding $smallPadding 0 $smallPadding $smallPadding * 3
        img
          max-width 100px
    .event-slider-container
      position absolute
      bottom 15%
      left 50%
      transform translateX(-50%)
      .event-slider
        position relative
        width 960px
        font-family $ralewayLight
        color $white
        .event-slide
          text-align center
          .event-description
            font-size 40px
          .event-location
            font-size 24px
            font-family $ralewayMedium
            color $red
          .event-info
            padding $mediumPadding 0
            font-size 18px
          .event-button
            width 125px
  .patreon-section
    overflow-x hidden
    color $white
    padding $sectionPadding
    text-align center
    position relative
    .line
      lineHorz()

      position absolute
      top -1.5px
      left 0
    .patreon-section-content
      max-width 960px
      margin auto
      h1
        color $red
        font-family $ralewayBold
        font-size 40px
      p
        font-family $ralewayLight
        font-size 22px
        line-height 1.5
        padding $mediumPadding 0
      .patreon-header
        display flex
        flex-wrap wrap
        justify-content center
        align-items center
        img
          width 100px
          margin-left 15px
          margin-right 8px
      .patreon-button
        width 200px
  +mQ(960px)
    nav
      display block
    .home
      background none
      height auto
      padding-top 60px
      .home-header-mobile
        display block
      .home-navigation, .button-row
        display none
      .event-slider-container
        position relative
        padding $sectionPaddingMobile
        width 100%
        height 100%
        .event-slider
          width 100%
          .event-slide
            height 100%
            .event-description
              font-size 32px
            .event-info
              padding $smallPadding 0
    .patreon-section
      padding $sectionPaddingMobile
      .patreon-section-content
        width 100%
        .patreon-header
          width 189px
          margin auto
          h1
            font-size 32px
          .patron
            font-size 46px
          img
            width 189px
            padding $smallPadding 0
        p
          font-size 18px
