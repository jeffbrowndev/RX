@import 'variables'

// Timeline event - left facing
eventMixinLeft()
  width 100%
  display flex
  align-items center
  justify-content flex-start
  position relative
  padding $mediumPadding 0
  .year
    order 2
    font-family $montserratBold
    margin-left $mediumPadding
    font-size 20px
  .event
    order 1
    padding-right $mediumPadding
    text-align right
    font-family $ralewayLight
    width 50%
  .circle
    z-index 10
    width 22px
    height 22px
    border-radius 22px
    background $red
    border 2px solid $white
    position absolute
    right calc(50% - 11px)

// Timeline event - right facing
eventMixinRight()
  width 100%
  display flex
  align-items center
  justify-content flex-end
  padding $mediumPadding 0
  .year
    font-family $montserratBold
    padding-right $mediumPadding
    font-size 24px
    font-size 20px
  .event
    padding-left $mediumPadding
    font-family $ralewayLight
    width 50%
  .circle
    z-index 10
    width 22px
    height 22px
    border-radius 22px
    background $red
    border 2px solid $white
    position absolute
    right calc(50% - 11px)

// Short horizontal red line
lineHorzShort(w)
  display flex
  .left
    border-left 0px solid transparent
    border-top 3px solid transparent
    border-right w solid $red
    border-bottom 3px solid transparent
  .right
    border-right 0px solid transparent
    border-top 3px solid transparent
    border-left w solid $red
    border-bottom 3px solid transparent

// Horizonal red line, full width/responsive
lineHorz()
  display flex
  .left
    border-left 0px solid transparent
    border-top 3px solid transparent
    border-right 50vw solid $red
    border-bottom 3px solid transparent
  .right
    border-right 0px solid transparent
    border-top 3px solid transparent
    border-left 50vw solid $red
    border-bottom 3px solid transparent

// Vertical red line, requires height argument
lineVert(h)
  max-height h
  display flex
  margin-right 20px
  .left
    border-left 0px solid transparent
    border-top h solid transparent
    border-right 3px solid $red
    border-bottom h solid transparent
  .right
    border-right 0px solid transparent
    border-top h solid transparent
    border-left 3px solid $red
    border-bottom h solid transparent

// Media query max-width
mQ(w)
  @media (max-width: w)
    {block}

// Media query min-width
mQmin(w)
  @media (min-width: w)
    {block}

// Media query max-height
mQHeight(h)
  @media (max-height: w)
    {block}

// Media query min-height
mQminHeight(h)
  @media (min-height: w)
    {block}
